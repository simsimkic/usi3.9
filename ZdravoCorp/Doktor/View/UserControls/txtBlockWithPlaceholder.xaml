<UserControl x:Class="ZdravoCorp.Doktor.View.UserControls.txtBlockWithPlaceholder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZdravoCorp.Doktor.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="250">
    <Grid Background="White">
        <TextBox Name="txtInput" VerticalContentAlignment="Center" FontSize="25" Background="Transparent"
                 TextChanged="txtInput_TextChanged" Text="{Binding searchText}"/>
        <Button Name ="btnClear" Content="X" HorizontalAlignment="Right" Width="30" Background="White" Foreground="Turquoise"
                Click="btnClear_Click"/>
        <TextBlock Name="placeholder" Text="Enter patients ID" VerticalAlignment="Center" FontSize="16" FontWeight="Light" Margin=" 5,0,0,0"
                   Foreground="Black" Panel.ZIndex="-1"/>

    </Grid>
</UserControl>
