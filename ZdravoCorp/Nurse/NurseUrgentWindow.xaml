<Window x:Class="ZdravoCorp.Nurse.NurseUrgentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ZdravoCorp.Nurse"
        Closing="NurseUrgentWindow_OnClosing"
        mc:Ignorable="d"
        Title="NurseUrgentWindow" Height="150" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Name="DoctorTypeL" Margin="10">Specialization: </Label>
                <ComboBox Name="SpecializationCombo" Margin="10" > 
                    <ComboBoxItem>General Practitioner</ComboBoxItem>
                    <ComboBoxItem>Surgeon</ComboBoxItem>
                    <ComboBoxItem>Cardiologist</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <Button Margin = "10" Width = "250" Name="ScheduleAppointmentButton" Click="ScheduleAppointmentButton_OnClick">Urgent Appointments/Operation</Button>
        </StackPanel>
    </Grid>
</Window>
